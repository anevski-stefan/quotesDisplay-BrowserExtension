{
    "name": "Quote extension",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Motivational quotes extension",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "scripts": ["popup.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
    
  }
  